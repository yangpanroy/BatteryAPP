<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorBackground"
        android:visibility="visible">

        <LinearLayout
            android:layout_marginTop="8dp"
            android:background="@color/white"
            android:elevation="2dp"
            android:padding="16dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:id="@+id/userHead_imageView"
                android:src="@drawable/user_head" />

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="未登录"
                    android:textStyle="bold"
                    android:textSize="7pt"/>

                <TextView
                    android:id="@+id/user_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登陆后可查看详细信息"
                    android:textSize="7pt"
                    android:textColor="#a9a9a9"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/logIn_button"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_btn_light"
                    android:text="点击登录"
                    android:textSize="7pt"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:clickable="true" />

                <TextView
                    android:layout_gravity="center"
                    android:id="@+id/logOut_button"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selector_btn_light"
                    android:text="退出登录"
                    android:textSize="7pt"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:clickable="true" />

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_item"
                android:background="@color/white"
                android:elevation="1dp"
                android:layout_marginBottom="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/setting_icon"
                    android:src="@drawable/setting"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="设置"
                    android:textSize="8pt"
                    android:layout_toEndOf="@+id/setting_icon" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/next" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/debug_item"
                android:background="@color/white"
                android:elevation="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/debug_icon"
                    android:src="@drawable/debug"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="调试"
                    android:textSize="8pt"
                    android:layout_toEndOf="@+id/debug_icon" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/next" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/info_item"
                android:background="@color/white"
                android:elevation="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginBottom="4dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/info_icon"
                    android:src="@drawable/info"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:text="关于"
                    android:textSize="8pt"
                    android:layout_toEndOf="@+id/info_icon" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/next" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>