<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="8dp"
        android:elevation="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_margin="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detail_item_module_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017年2月27日"
                android:textSize="7pt"/>

            <LinearLayout
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/detail_logistics_source"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="出发地"
                    android:textSize="7pt"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:src="@drawable/transfer"/>

                <TextView
                    android:id="@+id/detail_logistics_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="目的地"
                    android:textSize="7pt"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/detail_item_module_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID：161dsf516516sd1f516"
                android:textSize="7pt"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

