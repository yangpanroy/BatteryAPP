<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.novadata.batteryapp.SingleTradeActivity">

    <ScrollView
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_margin="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tradeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID：3151sdf51sf53f23s1f351"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/fromId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖方ID：fromID"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卖方：from"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/toId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买方ID：toID"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="买方：to"
                android:textSize="8pt"/>

            <TextView
                android:id="@+id/tradeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易时间：2017-02-27"
                android:textSize="8pt"/>

            <ImageView
                android:id="@+id/tradeAttachment"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/contract"
                android:layout_width="180dp"
                android:layout_height="320dp" />

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/productsIds_LinearLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
